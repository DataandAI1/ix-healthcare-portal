{\n  "hosting": {\n    "public": "dist",\n    "ignore": [\n      "firebase.json",\n      "**/.*",\n      "**/node_modules/**"\n    ],\n    "rewrites": [\n      {\n        "source": "**",\n        "destination": "/index.html"\n      }\n    ],\n    "headers": [\n      {\n        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",\n        "headers": [\n          {\n            "key": "Access-Control-Allow-Origin",\n            "value": "*"\n          }\n        ]\n      },\n      {\n        "source": "**/*.@(jpg|jpeg|gif|png|ico|svg|webp)",\n        "headers": [\n          {\n            "key": "Cache-Control",\n            "value": "max-age=7200"\n          }\n        ]\n      },\n      {\n        "source": "**/*.@(js|css)",\n        "headers": [\n          {\n            "key": "Cache-Control",\n            "value": "max-age=31536000"\n          }\n        ]\n      }\n    ]\n  }\n}